{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [
            "es2015",
            "es2015.iterable",
            "es2015.promise",
            "dom"
        ],
        "removeComments": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [{ "name": "ts-vue-plugin" }]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
